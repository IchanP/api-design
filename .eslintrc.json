{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "@lnu"
    ],
    "rules": {
      "semi": ["error", "always"],
      "no-undef": "off",
      "jsdoc/require-jsdoc": "off"
    },
    "ignorePatterns":["node_modules"]
  }