{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ESNext",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "types/**/*", "util/**/*"],
  "exclude": ["node_modules"]
}