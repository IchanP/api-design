{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ESNext",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "./types/**/*", "./Utils/**/*", "./populate.ts", "./swagger.ts"],
  "exclude": ["node_modules"]
}